@model VendasWebMVC.Models.Vendedor
@{
    ViewData["Title"] = "Novo Vendedor";
}

<h2>@ViewData["Title"]</h2>
<hr />

<!-- Bootstrap ROW: Garante que o elemento ocupe toda a largura da tela -->
<div class="row">
    <form asp-action="Create">
        <!-- Bootstrap COL MD: Espaçamento do elemento / espaço ocupado na tela na horizontal -> de 1 a 12 -->
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">E-Mail</label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Cadastrar" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Nascimento" class="control-label">Data de Nascimento</label>
                <input asp-for="Nascimento" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="SalarioBase" class="control-label">Salário Base</label>
                <input asp-for="SalarioBase" class="form-control" />
            </div>
        </div>
    </form>
</div>