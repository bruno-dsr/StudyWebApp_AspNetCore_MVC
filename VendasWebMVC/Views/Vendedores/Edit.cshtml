@model VendasWebMVC.Models.ViewModels.VendedorFormViewModel
@{
    ViewData["Title"] = "Editar Vendedor";
}

<h2>@ViewData["Title"]</h2>
<hr />
<div class="row">
<form asp-action="Edit">
    <input type="hidden" asp-for="Vendedor.ID" />
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="Vendedor.Nome" class="control-label"></label>
            <input asp-for="Vendedor.Nome" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Vendedor.Email" class="control-label">E-Mail</label>
            <input asp-for="Vendedor.Email" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Vendedor.Nascimento" class="control-label">Data de Nascimento</label>
            <input asp-for="Vendedor.Nascimento" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-success" value="Gravar" />
            <a asp-action="Index" class="btn btn-default">Cancelar</a>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="Vendedor.SalarioBase" class="control-label">Salário Base</label>
            <input asp-for="Vendedor.SalarioBase" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Vendedor.DepartamentoId" class="control-label">Departamento</label>
            <select asp-for="Vendedor.DepartamentoId" asp-items="@(new SelectList(Model.Departamentos, "ID", "Nome"))" class="form-control"></select>
        </div>
    </div>
</form>
</div>