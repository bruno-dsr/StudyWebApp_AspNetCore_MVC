
@{
    ViewData["Title"] = "Pesquisa Simplificada";
}

<h2>@ViewData["Title"]</h2>
<hr />
<div class="row">
    <form asp-action="SimpleSearch" class="form-horizontal col-md-12">
        <fieldset>
            <div class="form-group col-md-6">
                <label for="minDate" class="control-label col-md-3">Data Inicial:</label>
                <div class="col-md-8">
                    <input type="date" name="minDate" class="form-control" />
                </div>
            </div>
            <div class="form-group col-md-6">
                <label for="maxDate" class="control-label col-md-3">Data Final:</label>
                <div class="col-md-8">
                    <input type="date" name="maxDate" class="form-control" />
                </div>
            </div>
        </fieldset>
        <button type="submit" class="btn btn-primary">Pesquisar</button>
        <a asp-action="Index" class="btn btn-default">Voltar</a>
    </form>
</div>